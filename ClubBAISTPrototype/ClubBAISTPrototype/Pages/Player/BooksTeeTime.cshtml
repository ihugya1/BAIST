@page
@model ClubBAISTPrototype.Pages.Player.BooksTeeTimeModel
@{
}

   
   
<div class="container-fluid">


    <h1 class="h3 mb-2 text-light">Book Tee Time</h1>

    <form method="post" name="ItemForm">
        <!-- /.container-fluid -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-light">Tee Times: </h6>

                <span class="label label-default">Date Select :</span>
                <input type="date" name="name" value="" />
                <input type="submit" name="Submit" value="Search" class="btn btn-info" />

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-dark table-bordered table-sm">
                        <thead>
                            <tr>
                                <th class="tg-0lax">Date Time</th>
                                <th class="tg-0lax">Member Number</th>
                                <th class="tg-0lax">Number Carts</th>
                                <th class="tg-0lax">Is Standing Tee Time</th>
                                <th class="tg-0lax">Num Players</th>
                                <th class="tg-0lax">Book</th>
                            </tr>
                        </thead>
                        <tbody>
                          
                            @foreach (var teeTime in Model.SampleObjectCollection)
                            {
                            <tr>


                                <td class="tg-0lax">@teeTime.TeeTimeTime</td>
                                @if (teeTime.MemberNumber > 0)
                                {
                                    <td class="tg-0lax">@teeTime.MemberNumber</td>
                                    <td class="tg-0lax">@teeTime.NumCarts</td>
                                    <td class="tg-0lax">@teeTime.IsStandingTeeTime</td>
                                    <td class="tg-0lax">@teeTime.NumPlayers</td>
                                    <td class="tg-0lax"><button type="button" class="btn btn-warning btn-sm">Booked</button></td>
                                }
                                else
                                {
                                    <td class="tg-0lax"> <input type="text" class="form-control form-control-sm" id="lastNameField" placeholder="Enter MemberNumber"></td>
                                    <td class="tg-0lax"> <input type="text" class="form-control form-control-sm" id="lastNameField" placeholder="Enter # of Carts"></td>
                                    <td class="tg-0lax"> <input type="text" class="form-control form-control-sm" id="lastNameField" placeholder="Enter Standing Tee Time"></td>
                                    <td class="tg-0lax"> <input type="text" class="form-control form-control-sm" id="lastNameField" placeholder="Enter # of Players"></td>
                                    <td class="tg-0lax"><button type="button" class="btn btn-info btn-sm">Book Me</button></td>
                                }





                            </tr>
                            }




                        </tbody>
                        </table>
                </div>
            </div>
        </div>
    </form>
</div>
