@page
@model ClubBAISTPrototype.Pages.Player.BooksTeeTimeModel
@{
}


    

    <div class="container-fluid">


        <h1 class="h3 mb-2 text-light">Book Tee Time</h1>

        <form method="post" name="ItemForm">
            <!-- /.container-fluid -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-light">Tee Times: </h6>
                    <span class="label label-default">Date Select :</span>
                    <input type="date" name="SearchParameter" value="@Model.SearchParameter" />
                    <input type="submit" name="Submit" value="Search" class="btn btn-info" />
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-dark table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th class="tg-0lax">Date Time</th>
                                    <th class="tg-0lax">Member Number</th>
                                    <th class="tg-0lax">Number Carts</th>
                                    <th class="tg-0lax">Is Standing Tee Time</th>
                                    <th class="tg-0lax">Num Players</th>
                                    <th class="tg-0lax">Book</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var teeTime in Model.SampleObjectCollection)
                                {
                                    <tr>

                                        @if (teeTime.MemberNumber > 0)
                                        {

                                            <td class="tg-0lax">@teeTime.TeeTimeDate</td>
                                            <td class="tg-0lax">@teeTime.MemberNumber</td>
                                            <td class="tg-0lax">@teeTime.NumCarts</td>
                                            <td class="tg-0lax">@teeTime.IsStandingTeeTime</td>
                                            <td class="tg-0lax">@teeTime.NumPlayers</td>
                                            <td class="tg-0lax"><button type="button" class="btn btn-warning btn-sm">Booked</button></td>
                                        }
                                        else
                                        {
                                            <td class="tg-0lax">@teeTime.TeeTimeDate</td>
                                            <td class="tg-0lax"> </td>
                                            <td class="tg-0lax"> </td>//type="submit" name="Submit" value="Search"
                                            <td class="tg-0lax"> </td>
                                            <td class="tg-0lax"> </td>
                                            <td class="tg-0lax"><button type="submit" name="Submit" value="Get @teeTime.TeeTimeDate" class="btn btn-primary"  data-toggle="modal" data-target="#exampleModal" data-whatever="@teeTime.TeeTimeDate)">Book @teeTime.TeeTimeDate</button></td>
                                        }

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </form>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div name="SampleForm" onsubmit="return IsFormValid(window.document.SampleForm);">
                        <form id="myform">
                            <div class="form-group">
                                <p id="demo"></p>
                                <label for="recipient-name" class="col-form-label">Recipient:</label>
                                <input type="text" class="form-control form-control-sm" id="jsTest" value="@Model.newTeeTime">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Member Number:</label>
                                <input type="text" class="form-control form-control-sm" id="lastNameField" placeholder="Enter MemberNumber">
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Message:</label>
                                <input type="text" class="form-control form-control-sm" id="lastNameField" placeholder="Enter # of Carts">
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Message:</label>
                                <input type="text" class="form-control form-control-sm" id="lastNameField" placeholder="Enter Standing Tee Time">
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Message:</label>
                                <input type="text" class="form-control form-control-sm" id="lastNameField" placeholder="Enter # of Players">
                            </div>
                        </form>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Send message</button>
                </div>
            </div>
        </div>
    </div>
    </div>
