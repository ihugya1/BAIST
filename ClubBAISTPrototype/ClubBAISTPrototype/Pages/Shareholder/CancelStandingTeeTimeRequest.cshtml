@page
@model ClubBAISTPrototype.Pages.Shareholder.CancelStandingTeeTimeRequestModel
@{
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Modify Standing Tee Time Request</title>
</head>
<body>
    @if (Model.SampleObjectCollection.Count > 0)
    {

        <div class="jumbotron-fluid">Standing Tee Time Requests</div>

        <div class="container-fluid">
            <form name="ModifyStandingteeTimeRequest" method="post">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-light">Standing Tee Time Requests: </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-dark table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th>Standing Tee Time ID</th>
                                        <th>Share Holder Number</th>
                                        <th>Member Number 2</th>
                                        <th>Member Number 3</th>
                                        <th>Member Number 4</th>
                                        <th>Shareholder Name</th>
                                        <th>Member Name 2</th>
                                        <th>Member Name 3</th>
                                        <th>Member Name 4</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Time</th>
                                        <th>Day Of Week</th>
                                        <th>Is Approved</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var items in Model.SampleObjectCollection)
                                    {

                                        <tr>
                                            <td><input type="submit" name="Submit" class="btn btn-warning btn-sm" value="Cancel @items.StandingTeeTimeID" /></td>
                                            <td>@items.ShareHolderNumber<br /></td>
                                            <td>@items.MemberNumber2<br /></td>
                                            <td>@items.MemberNumber3<br /></td>
                                            <td>@items.MemberNumber4<br /></td>
                                            <td>@items.ShareHolderName<br /></td>
                                            <td>@items.Member2Name<br /></td>
                                            <td>@items.Member3Name<br /></td>
                                            <td>@items.Member4Name<br /></td>
                                            <td>@items.DateStart.ToShortDateString()<br /></td>
                                            <td>@items.DateEnd.ToShortDateString()<br /></td>
                                            <td>@items.TeeTimeTime.TimeOfDay<br /></td>
                                            <td>@Enum.GetName(typeof(DayOfWeek), items.RequestedDayOfWeek)<br /></td>
                                            <td>@items.IsApproved<br /></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </form>

        </div>

        @Model.Message
    }
    else
    {
        <div class="card text-center text-white bg-danger" style="max-width: 18rem;">
            <div class="card-body">
                <p class="card-text">No Standing Tee Time Requests</p>
            </div>
        </div>
    }
</body>
</html>
