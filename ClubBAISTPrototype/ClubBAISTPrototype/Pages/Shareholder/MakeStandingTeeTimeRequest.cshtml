@page
@model ClubBAISTPrototype.Pages.Shareholder.MakeStandingTeeTimeRequestModel
@{
}
<form method="post" name="ItemForm">
    <!-- /.container-fluid -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-light">Make Standing Tee Time Request: </h6>
    
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-dark table-bordered table-sm">
                    <thead>
                        <tr>
                            <th class="tg-1wig"></th>
                            <th class="tg-0lax"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="tg-1wig">
                                Member Number : (List Shareholder Member first)
                                <input asp-for="Member1NumField" class="form-control form-control-sm" type="number"   />
                                <span asp-validation-for="Member1NumField"></span>
                            </td>

                            <td class="tg-1wig">
                                Member Name
                                :<input asp-for="Member1NameField" class="form-control form-control-sm" type="text"   />
                                <span asp-validation-for="Member1NameField"></span>
                            </td>

                        </tr>
                        <tr>
                            <td class="tg-1wig">
                                Member Number :
                                <input asp-for="Member2NumField" class="form-control form-control-sm" type="number"   />
                                <span asp-validation-for="Member2NumField"></span>
                            </td>

                            <td class="tg-1wig">
                                Member Name :
                                <input asp-for="Member2NameField" class="form-control form-control-sm" type="text"   />
                                <span asp-validation-for="Member2NameField"></span>
                            </td>

                        </tr>
                        <tr>
                            <td class="tg-1wig">
                                Member Number :
                                <input asp-for="Member3NumField" class="form-control form-control-sm" type="number"   />
                                <span asp-validation-for="Member3NumField"></span>
                            </td>

                            <td class="tg-1wig">
                                Member Name :
                                <input asp-for="Member3NameField" class="form-control form-control-sm" type="text"   />
                                <span asp-validation-for="Member3NameField"></span>
                            </td>

                        </tr>
                        <tr>
                            <td class="tg-1wig">
                                Member Number :
                                <input asp-for="Member4NumField" class="form-control form-control-sm" type="number"   />
                                <span asp-validation-for="Member4NumField"></span>
                            </td>

                            <td class="tg-1wig">
                                Member Name :
                                <input asp-for="Member4NameField" class="form-control form-control-sm" type="text"   />
                                <span asp-validation-for="Member4NameField"></span>
                            </td>

                        </tr>
                        <tr>
                            <td class="tg-1wig"></td>
                            <td class="tg-0lax"></td>

                        </tr>
                        <tr>
                            <td class="tg-1wig">
                                Requested Day of Week :
                                <select class="form-control form-control-sm" asp-for="DayOfWeek" asp-items="Html.GetEnumSelectList<DayOfWeek>()">
                                    <option value="">Choose a day</option>
                                </select>
                                <span asp-validation-for="DayOfWeek"></span>
                            </td>

                            <td class="tg-1wig">
                                Requested Tee Time : ( +/- 30 Min)
                                <input asp-for="TeeTimeTimeField" class="form-control form-control-sm" type="time"   />
                                <span asp-validation-for="TeeTimeTimeField"></span>
                            </td>

                        </tr>
                        <tr>
                            <td class="tg-1wig">
                                Requested Start Date :
                                <input asp-for="StartDateField" class="form-control form-control-sm" type="date"   />
                                <span asp-validation-for="StartDateField"></span>
                            </td>
                            <td class="tg-0lax"></td>

                        </tr>
                        <tr>
                            <td class="tg-1wig">
                                Requested End Date :
                                <input asp-for="EndDateField" class="form-control form-control-sm" type="date"   />
                                <span asp-validation-for="EndDateField"></span>
                            </td>
                            <td class="tg-0lax"></td>


                        </tr>
                        <tr>
                            <td class="tg-1wig"></td>
                            <td class="tg-0lax"></td>

                        </tr>
                        <tr class="bg-danger">
                            <td class="tg-1wig">Do not fill in shaded area</td>
                            <td class="tg-0lax"></td>

                        </tr>
                        <tr class="bg-danger">
                            <td class="tg-1wig">
                                Priority Number:
                                <input class="form-control form-control-sm" type="text"   disabled />
                            </td>
                            <td class="tg-0lax"></td>

                        </tr>
                        <tr class="bg-danger">
                            <td class="tg-1wig">
                                Approved Tee Time:
                                <input class="form-control form-control-sm" type="text"   disabled />
                            </td>
                            <td class="tg-0lax"></td>

                        </tr>
                        <tr class="bg-danger">
                            <td class="tg-1wig">
                                Approved By:
                                <input class="form-control form-control-sm" type="text"   disabled />
                            </td>

                            <td class="tg-1wig">
                                Approved Date:
                                <input class="form-control form-control-sm" type="date"   disabled />
                            </td>

                        </tr>
                    </tbody>
                </table>
                <button name="Submit" value="Submit" type="submit" class="btn btn-light">Submit</button>
            </div>
</div>
</div>
    @Model.Message
</form>