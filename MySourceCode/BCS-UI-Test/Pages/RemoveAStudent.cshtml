@page
@model BCS_UI_Test.Pages.Shared.RemoveAStudentModel
@{
}
<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="jumbotron">
        <h1 class="display-4">Delete a  Student</h1>
    </div>
    <div class="form-group">
        <form method="post">
            <label for="studentIDField">Student ID</label>
            <input asp-for="StudentIDField" type="text" class="form-control" id="studentIDField" placeholder="Enter Student ID">

            <button class="btn btn-danger">Delete</button>
            <span asp-validation-for="StudentIDField"></span>
        </form>
    </div>

    <h3 class="clearfix">@Model.Message</h3>
</body>
</html>

